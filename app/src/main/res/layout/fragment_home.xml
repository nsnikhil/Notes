<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeContainer"
    style="@style/matchParent"
    tools:context="com.nrs.nsnik.notes.fragments.HomeFragment">

    <android.support.v4.widget.NestedScrollView style="@style/matchParent">

        <LinearLayout style="@style/verticalLinearLayout">

            <FrameLayout
                android:id="@+id/homeNotesFolderContainer"
                style="@style/stretchedHorizontally" />

            <FrameLayout
                android:id="@+id/homeNotesContainer"
                style="@style/stretchedHorizontally" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <include
        android:id="@+id/homeEmptyState"
        layout="@layout/empty_state"
        android:visibility="gone" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/homeAdd"
        style="@style/fab"
        app:fabSize="normal"
        fab:menu_colorNormal="@color/colorAccent"
        fab:menu_colorPressed="@color/colorAccent"
        fab:menu_colorRipple="#99FFFFFF" />

</RelativeLayout>
