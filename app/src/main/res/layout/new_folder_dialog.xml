<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/stretchedHorizontally">

    <EditText
        android:id="@+id/dialogFolderName"
        style="@style/wrapContent"
        android:background="@null"
        android:fontFamily="@font/roboto_mono_bold"
        android:autofillHints=""
        android:inputType="text"
        android:hint="@string/newfoldername"
        android:maxLines="1"
        android:minWidth="300dp"
        android:padding="@dimen/twentyFour"
        app:layout_constraintEnd_toStartOf="@+id/dialogFolderColor"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/dialogFolderLock"
        style="@style/twentyFour"
        android:layout_marginStart="@dimen/eight"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@string/imageDescription"
        android:focusable="true"
        android:src="@drawable/ic_lock_open_black_48px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialogFolderName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogFolderName" />

    <ImageView
        android:id="@+id/dialogFolderStar"
        style="@style/twentyFour"
        android:layout_marginStart="@dimen/eight"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@string/imageDescription"
        android:focusable="true"
        android:src="@drawable/ic_star_border_black_48px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialogFolderLock"
        app:layout_constraintTop_toBottomOf="@id/dialogFolderName" />

    <ImageView
        android:id="@+id/dialogFolderColor"
        style="@style/twentyFour"
        android:layout_marginEnd="@dimen/sixteen"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorAccent"
        android:clickable="true"
        android:contentDescription="@string/imageDescription"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@id/dialogFolderCreate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialogFolderName"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dialogFolderCreate"
        style="?attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogFolderName" />

    <Button
        android:id="@+id/dialogFolderCancel"
        style="?attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/cancel"
        app:layout_constraintEnd_toStartOf="@id/dialogFolderCreate"
        app:layout_constraintTop_toBottomOf="@id/dialogFolderName" />

</androidx.constraintlayout.widget.ConstraintLayout>

