<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/matchParent"
    tools:context=".view.fragments.AboutFragment">

    <android.support.constraint.ConstraintLayout
        style="@style/matchParent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/aboutNikhil"
            style="@style/wrapContent"
            android:layout_marginTop="@dimen/sixteen"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="@string/aboutNikhil"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/aboutSourceCode"
            style="@style/wrapContent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sixteen"
            android:fontFamily="@font/roboto_mono_medium"
            android:padding="@dimen/sixteen"
            android:text="@string/aboutSourceCode"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aboutNikhil" />

        <Button
            android:id="@+id/aboutLibraries"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sixteen"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="@string/aboutLibraries"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aboutSourceCode" />

        <Button
            android:id="@+id/aboutLicense"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sixteen"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="@string/aboutLicense"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aboutLibraries" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>