<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/matchParent"
    tools:context=".view.fragments.AboutFragment">

    <ScrollView style="@style/matchParent">

        <LinearLayout
            style="@style/verticalLinearLayout"
            android:gravity="center">

            <com.nrs.nsnik.notes.view.customViews.NikTextView
                style="@style/wrapContent"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textSize="96sp"
                android:textStyle="bold" />

            <com.nrs.nsnik.notes.view.customViews.NikTextView
                style="@style/wrapContent"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/sixteen"
                android:text="@string/aboutApp"
                android:textSize="16sp" />

            <com.nrs.nsnik.notes.view.customViews.NikTextView
                android:id="@+id/aboutNikhil"
                style="@style/wrapContent"
                android:layout_marginTop="@dimen/sixteen"
                android:text="@string/aboutNikhil"
                android:textAlignment="center"
                android:textSize="16sp" />

            <com.nrs.nsnik.notes.view.customViews.NikTextView
                android:id="@+id/aboutSourceCode"
                style="@style/wrapContent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/sixteen"
                android:padding="@dimen/sixteen"
                android:text="@string/aboutSourceCode"
                android:textAlignment="center"
                android:textSize="16sp" />

            <Button
                android:id="@+id/aboutLibraries"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/sixteen"
                android:text="@string/aboutLibraries" />

            <Button
                android:id="@+id/aboutLicense"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/sixteen"
                android:text="@string/aboutLicense" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
