<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/verticalLinearLayout"
    android:gravity="center"
    tools:context="com.nrs.nsnik.notes.fragments.AboutFragment">

    <ImageView
        style="@style/errorImage"
        android:layout_marginBottom="@dimen/sixteen"
        android:contentDescription="@string/imageDescription"
        android:src="@drawable/splash_logo"
        android:visibility="visible" />

    <com.nrs.nsnik.notes.customViews.NikTextView
        style="@style/wrapContent"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.nrs.nsnik.notes.customViews.NikTextView
        android:id="@+id/aboutVersionInfo"
        style="@style/wrapContent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/sixteen"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textSize="14sp" />

    <Button
        android:id="@+id/aboutLibraries"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/aboutLibraries" />

    <Button
        android:id="@+id/aboutLicense"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/aboutLicense" />

</LinearLayout>
