<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainDrawerLayout"
    style="@style/matchParent"
    android:fitsSystemWindows="true"
    tools:context="com.nrs.nsnik.notes.MainActivity">

    <RelativeLayout style="@style/matchParent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/mainToolbar"
            android:theme="@style/AppToolbar"
            style="@style/toolbar" />

        <ImageView
            style="@style/matchParent"
            android:id="@+id/mainEmptyState"
            android:visibility="gone"
            android:src="@drawable/emptystate"
            android:scaleType="centerCrop"/>

            <FrameLayout
                android:id="@+id/mainFolderContainer"
                android:layout_below="@id/mainToolbar"
                style="@style/wrapContent"
                android:layout_width="match_parent"/>

            <FrameLayout
                android:id="@+id/mainContainer"
                android:layout_below="@id/mainFolderContainer"
                style="@style/wrapContent"
                android:layout_width="match_parent"/>

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/mainFab"
            style="@style/fab"
            fab:menu_colorNormal="#FFC107"
            fab:menu_colorPressed="#FFC107"
            fab:menu_colorRipple="#99FFFFFF"
            android:src="@drawable/ic_add_white_48dp"
            app:fabSize="normal" />
    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="@dimen/drawerWidth"
        android:layout_height="match_parent"
        android:id="@+id/mainNaviagtionView"
        app:headerLayout="@layout/header_layout"
        app:menu="@menu/header_items"
        android:layout_gravity="start" />

</android.support.v4.widget.DrawerLayout>
