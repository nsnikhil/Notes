<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainDrawerLayout"
    style="@style/matchParent"
    android:fitsSystemWindows="true"
    tools:context="com.nrs.nsnik.notes.MainActivity">

    <FrameLayout style="@style/matchParent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/mainToolbar"
            style="@style/toolbar">

            <TextView
                android:id="@+id/mainToolBarText"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="serif-monospace"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:typeface="monospace" />

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/mainContainer"
            style="@style/matchParent"
            android:layout_marginTop="?attr/actionBarSize" />

    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/mainNaviagtionView"
        android:layout_width="@dimen/drawerWidth"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_layout"
        app:itemIconTint="@color/nav_item_selector"
        app:itemTextColor="@color/nav_item_selector"
        app:menu="@menu/header_items" />

</android.support.v4.widget.DrawerLayout>
