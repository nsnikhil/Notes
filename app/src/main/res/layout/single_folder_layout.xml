<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/stretchedHorizontally"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="1dp"
    card_view:cardMaxElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout style="@style/horizontalLinearLayout">

        <ImageView
            android:id="@+id/singleFolderIcon"
            style="@style/wrapContent"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/eight"
            android:contentDescription="@string/imageDescription"
            android:src="@drawable/ic_folder_black_48dp" />

        <TextView
            android:id="@+id/singleFolderName"
            style="@style/newNoteHeading"
            android:maxLines="1" />

    </LinearLayout>

</android.support.v7.widget.CardView>

