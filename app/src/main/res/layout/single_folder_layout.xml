<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/stretchedHorizontally"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:transitionName="noteFolder"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp"
    card_view:cardMaxElevation="1dp"
    card_view:cardUseCompatPadding="true">

    <TextView
        android:id="@+id/singleFolderName"
        style="@style/newNoteHeading"
        android:drawablePadding="@dimen/eight"
        android:drawableStart="@drawable/ic_folder_black_48dp"
        android:fontFamily="serif-monospace"
        android:maxLines="1"
        android:padding="4dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/singleFolderMore"
        style="@style/wrapContent"
        android:layout_gravity="end|center_vertical"
        android:background="@android:color/transparent"
        android:contentDescription="@string/imageDescription"
        android:padding="@dimen/eight"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:tint="#999999" />


</android.support.v7.widget.CardView>

