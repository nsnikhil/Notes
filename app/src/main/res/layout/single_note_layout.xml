<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/singleNoteCard"
    style="@style/myCardView"
    android:transitionName="noteContainer">

    <android.support.constraint.ConstraintLayout style="@style/verticalLinearLayout">

        <ImageView
            android:id="@+id/singleNoteImage"
            style="@style/stretchedHorizontally"
            android:layout_height="100dp"
            android:contentDescription="@string/imageDescription"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <com.nrs.nsnik.notes.view.customViews.NikTextView
            android:id="@+id/singleNoteTitle"
            style="@style/newNoteHeading"
            android:maxLines="1"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/singleNoteImage" />

        <com.nrs.nsnik.notes.view.customViews.NikTextViewLight
            android:id="@+id/singleNoteContent"
            style="@style/newNoteContent"
            android:lineSpacingExtra="2dp"
            android:maxLines="6"
            app:layout_constraintTop_toBottomOf="@id/singleNoteTitle" />

        <ImageButton
            android:id="@+id/singleNoteMore"
            style="@style/wrapContent"
            android:layout_gravity="end|center_vertical"
            android:background="@null"
            android:contentDescription="@string/imageDescription"
            android:padding="@dimen/eight"
            android:src="@drawable/ic_more_vert_black_24px"
            android:tint="#999999"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/singleNoteContent" />

        <com.nrs.nsnik.notes.view.customViews.NikTextViewLight
            android:id="@+id/singleNoteDate"
            style="@style/wrapContent"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="9"
            android:drawablePadding="@dimen/eight"
            android:drawableStart="@drawable/note_time"
            android:drawableTint="#999999"
            android:gravity="center_vertical"
            android:padding="@dimen/eight"
            android:text="@string/app_name"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
