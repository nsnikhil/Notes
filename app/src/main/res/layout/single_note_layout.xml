<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/singleNoteCard"
    style="@style/stretchedHorizontally"
    android:animateLayoutChanges="true"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:transitionName="noteContainer"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp"
    card_view:cardMaxElevation="1dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout style="@style/verticalLinearLayout">

        <ImageView
            android:id="@+id/singleNoteImage"
            style="@style/stretchedHorizontally"
            android:layout_height="100dp"
            android:contentDescription="@string/imageDescription"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <com.nrs.nsnik.notes.customViews.NikTextView
            android:id="@+id/singleNoteTitle"
            style="@style/newNoteHeading"
            android:maxLines="1"
            android:textStyle="bold" />

        <com.nrs.nsnik.notes.customViews.NikTextViewLight
            android:id="@+id/singleNoteContent"
            style="@style/newNoteContent"
            android:lineSpacingExtra="2dp"
            android:maxLines="6" />

        <LinearLayout
            style="@style/wrapContent"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/singleNoteReminder"
                style="@style/small"
                android:layout_margin="@dimen/eight"
                android:contentDescription="@string/imageDescription"
                android:src="@drawable/ic_timer_black_24dp"
                android:tint="@color/colorAccent"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/singleNoteAudio"
                style="@style/small"
                android:layout_margin="@dimen/eight"
                android:contentDescription="@string/imageDescription"
                android:src="@drawable/ic_audiotrack_black_24dp"
                android:tint="@color/colorAccent"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/singleNoteCheck"
                style="@style/small"
                android:layout_margin="@dimen/eight"
                android:contentDescription="@string/imageDescription"
                android:src="@drawable/ic_playlist_add_check_black_24dp"
                android:tint="@color/colorAccent"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout style="@style/stretchedHorizontally">

            <com.nrs.nsnik.notes.customViews.NikTextViewLight
                android:id="@+id/singleNoteDate"
                style="@style/wrapContent"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
                android:drawablePadding="@dimen/eight"
                android:drawableStart="@drawable/ic_access_time_black_18dp"
                android:drawableTint="#999999"
                android:gravity="center_vertical"
                android:padding="@dimen/eight"
                android:text="@string/app_name"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/singleNoteMore"
                style="@style/wrapContent"
                android:layout_gravity="end|center_vertical"
                android:background="@android:color/transparent"
                android:contentDescription="@string/imageDescription"
                android:padding="@dimen/eight"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:tint="#999999" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
