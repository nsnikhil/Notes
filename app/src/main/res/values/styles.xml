<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="stretchedVertically">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="stretchedHorizontally">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="matchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="twentyFour">
        <item name="android:layout_width">@dimen/twentyFour</item>
        <item name="android:layout_height">@dimen/twentyFour</item>
    </style>

    <style name="verticalLinearLayout" parent="matchParent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="horizontalLinearLayout" parent="matchParent">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="whiteColorCode">
        <item name="colorControlNormal">@color/cardview_light_background</item>
    </style>

    <style name="blackColorCode">
        <item name="colorControlNormal">@color/cardview_dark_background</item>
    </style>

    <style name="accentColorCode">
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="headerImage">
        <item name="android:layout_width">@dimen/headerCircleImage</item>
        <item name="android:layout_height">@dimen/headerCircleImage</item>
        <item name="android:layout_marginLeft">@dimen/sixteen</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="headerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/sixteen</item>
        <item name="android:layout_marginTop">@dimen/sixteen</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/headingText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="newNoteHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/sixteen</item>
        <item name="android:hint">@string/title</item>
        <item name="android:textSize">@dimen/headingText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="newNoteContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/sixteen</item>
        <item name="android:hint">@string/newNote</item>
        <item name="android:textSize">@dimen/smallHeadingText</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">normal</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_colorPressed">#F2AB00</item>
        <item name="fab_colorRipple">#D99200</item>
    </style>

    <style name="crdv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="bottomToolbar">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="small">
        <item name="android:layout_height">@dimen/small</item>
        <item name="android:layout_width">@dimen/small</item>
    </style>

    <style name="errorImage">
        <item name="android:layout_width">@dimen/drawerWidth</item>
        <item name="android:layout_height">@dimen/drawerWidth</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="progressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fab" parent="wrapContent">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_margin">@dimen/sixteen</item>
    </style>

</resources>
